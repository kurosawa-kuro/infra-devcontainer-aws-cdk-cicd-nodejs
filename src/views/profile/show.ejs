<%- contentFor('body') %>
<div class="max-w-2xl mx-auto px-4">
  <div class="bg-white dark:bg-gray-900 shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <div class="flex items-center">
        <img 
          src="<%= userProfile?.avatarPath ? `/uploads/${userProfile.avatarPath}` : '/uploads/default_avatar.png' %>" 
          alt="Profile Avatar" 
          class="h-20 w-20 rounded-full object-cover mr-4"
        >
        <div>
          <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white">
            <%= user.name || 'ユーザー' %>
          </h3>
          <p class="mt-1 max-w-2xl text-sm text-gray-500 dark:text-gray-400">
            <%= user.email %>
          </p>
        </div>
      </div>
    </div>
    <div class="border-t border-gray-200 dark:border-gray-800">
      <dl>
        <div class="bg-gray-50 dark:bg-gray-800 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">メール</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:col-span-2 sm:mt-0">
            <% user.userRoles.forEach(userRole => { %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 mr-2">
                <%= userRole.role.name %>
              </span>
            <% }); %>
          </dd>
        </div>
        <div class="bg-white dark:bg-gray-900 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">自己紹介</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:col-span-2 sm:mt-0">
            <%= userProfile?.bio || '未設定' %>
          </dd>
        </div>
        <div class="bg-gray-50 dark:bg-gray-800 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">場所</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:col-span-2 sm:mt-0">
            <%= userProfile?.location || '未設定' %>
          </dd>
        </div>
        <div class="bg-white dark:bg-gray-900 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">ウェブサイト</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:col-span-2 sm:mt-0">
            <% if (userProfile?.website) { %>
              <a href="<%= userProfile.website %>" target="_blank" rel="noopener noreferrer" class="text-indigo-600 hover:text-indigo-500">
                <%= userProfile.website %>
              </a>
            <% } else { %>
              未設定
            <% } %>
          </dd>
        </div>
        <div class="bg-gray-50 dark:bg-gray-800 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">生年月日</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:col-span-2 sm:mt-0">
            <%= userProfile?.birthDate ? new Date(userProfile.birthDate).toLocaleDateString('ja-JP') : '未設定' %>
          </dd>
        </div>
        <div class="bg-white dark:bg-gray-900 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">登録日</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:col-span-2 sm:mt-0">
            <%= new Date(user.createdAt).toLocaleDateString('ja-JP') %>
          </dd>
        </div>
      </dl>
    </div>
  </div>

  <div class="mt-6 flex justify-end">
    <% if (user.id === req.user.id || req.user.userRoles.some(ur => ur.role.name === 'admin')) { %>
      <a
        href="/profile/<%= user.id %>/edit"
        class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
      >
        編集
      </a>
    <% } %>
  </div>

  <!-- フォロー状態 -->
  <div class="mt-8 bg-white dark:bg-gray-900 shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <div class="flex space-x-8">
        <div class="text-center">
          <div class="text-2xl font-semibold text-gray-900 dark:text-white">182</div>
          <div class="mt-1 text-sm text-gray-500 dark:text-gray-400">フォロー中</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-semibold text-gray-900 dark:text-white">12</div>
          <div class="mt-1 text-sm text-gray-500 dark:text-gray-400">フォロワー</div>
        </div>
      </div>
    </div>
  </div>

  <!-- 投稿一覧 -->
  <div class="mt-8">
    <h2 class="text-lg font-medium text-gray-900 dark:text-white mb-4">投稿一覧</h2>
    <% if (microposts && microposts.length > 0) { %>
      <div class="space-y-4">
        <% microposts.forEach(post => { %>
          <div class="bg-white dark:bg-gray-900 shadow overflow-hidden sm:rounded-lg">
            <div class="px-4 py-5 sm:p-6">
              <div class="text-sm text-gray-900 dark:text-white">
                <%= post.title %>
              </div>
              <% if (post.imageUrl) { %>
                <div class="mt-2">
                  <img src="<%= post.imageUrl %>" alt="Post image" class="max-h-48 rounded-lg">
                </div>
              <% } %>
              <div class="mt-2 text-xs text-gray-500 dark:text-gray-400">
                <%= new Date(post.createdAt).toLocaleString('ja-JP') %>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <p class="text-gray-500 dark:text-gray-400">まだ投稿がありません。</p>
    <% } %>
  </div>
</div> 