<%- contentFor('body') %>
<div class="max-w-2xl mx-auto px-4">
  <div class="bg-white dark:bg-gray-900 shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <div class="flex items-center">
        <img 
          src="<%= userProfile?.avatarPath ? `/uploads/${userProfile.avatarPath}` : '/uploads/default_avatar.png' %>" 
          alt="Profile Avatar" 
          class="h-20 w-20 rounded-full object-cover mr-4"
        >
        <div>
          <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white">
            <%= profileUser.name || 'ユーザー' %>
          </h3>
          <p class="mt-1 max-w-2xl text-sm text-gray-500 dark:text-gray-400">
            <%= profileUser.email %>
          </p>
        </div>
      </div>
    </div>
    <div class="border-t border-gray-200 dark:border-gray-800">
      <dl>
        <div class="bg-gray-50 dark:bg-gray-800 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">メール</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:col-span-2 sm:mt-0">
            <% profileUser.userRoles.forEach(userRole => { %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 mr-2">
                <%= userRole.role.name %>
              </span>
            <% }); %>
          </dd>
        </div>
        <div class="bg-white dark:bg-gray-900 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">自己紹介</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:col-span-2 sm:mt-0">
            <%= userProfile?.bio || '未設定' %>
          </dd>
        </div>
        <div class="bg-gray-50 dark:bg-gray-800 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">場所</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:col-span-2 sm:mt-0">
            <%= userProfile?.location || '未設定' %>
          </dd>
        </div>
        <div class="bg-white dark:bg-gray-900 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">ウェブサイト</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:col-span-2 sm:mt-0">
            <% if (userProfile?.website) { %>
              <a href="<%= userProfile.website %>" target="_blank" rel="noopener noreferrer" class="text-indigo-600 hover:text-indigo-500">
                <%= userProfile.website %>
              </a>
            <% } else { %>
              未設定
            <% } %>
          </dd>
        </div>
        <div class="bg-gray-50 dark:bg-gray-800 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">生年月日</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:col-span-2 sm:mt-0">
            <%= userProfile?.birthDate ? new Date(userProfile.birthDate).toLocaleDateString('ja-JP') : '未設定' %>
          </dd>
        </div>
        <div class="bg-white dark:bg-gray-900 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">登録日</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:col-span-2 sm:mt-0">
            <%= new Date(profileUser.createdAt).toLocaleDateString('ja-JP') %>
          </dd>
        </div>
      </dl>
    </div>
  </div>

  <div class="mt-6 flex justify-end space-x-4">
    <% if (user) { %>
      <% if (profileUser.id === user.id || user.userRoles.some(ur => ur.role.name === 'admin')) { %>
        <a
          href="/<%= profileUser.name || profileUser.id %>/edit"
          class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        >
          編集
        </a>
      <% } else { %>
        <button
          onclick="toggleFollow('<%= profileUser.id %>', this)"
          class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white <%= isFollowing ? 'bg-gray-600 hover:bg-gray-700' : 'bg-blue-600 hover:bg-blue-700' %> focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
          data-following="<%= isFollowing %>"
        >
          <span class="follow-text" data-following="<%= isFollowing %>">
            <%= isFollowing ? 'フォロー中' : 'フォロー' %>
          </span>
        </button>
      <% } %>
    <% } %>
  </div>

  <!-- フォロー状態 -->
  <div class="mt-8 bg-white dark:bg-gray-900 shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <div class="flex space-x-8">
        <div class="text-center">
          <div class="text-2xl font-semibold text-gray-900 dark:text-white"><%= followCounts.followingCount %></div>
          <div class="mt-1 text-sm text-gray-500 dark:text-gray-400">フォロー中</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-semibold text-gray-900 dark:text-white"><%= followCounts.followersCount %></div>
          <div class="mt-1 text-sm text-gray-500 dark:text-gray-400">フォロワー</div>
        </div>
      </div>
    </div>
  </div>

  <script>
    async function toggleFollow(userId, button) {
      const isFollowing = button.getAttribute('data-following') === 'true';
      const endpoint = isFollowing ? `/${userId}/unfollow` : `/${userId}/follow`;
      
      try {
        const response = await fetch(endpoint, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          }
        });
        
        if (response.ok) {
          const result = await response.json();
          button.setAttribute('data-following', !isFollowing);
          const followText = button.querySelector('.follow-text');
          followText.textContent = isFollowing ? 'フォロー' : 'フォロー中';
          followText.setAttribute('data-following', !isFollowing);
          button.classList.toggle('bg-gray-600');
          button.classList.toggle('hover:bg-gray-700');
          button.classList.toggle('bg-blue-600');
          button.classList.toggle('hover:bg-blue-700');
          
          // フォロー数を更新（必要に応じて）
          location.reload();
        }
      } catch (error) {
        console.error('Error:', error);
        alert('エラーが発生しました');
      }
    }

    // フォローボタンのホバー処理
    document.addEventListener('DOMContentLoaded', () => {
      const followTexts = document.querySelectorAll('.follow-text');
      followTexts.forEach(text => {
        const button = text.closest('button');
        
        button.addEventListener('mouseenter', () => {
          if (text.getAttribute('data-following') === 'true') {
            text.textContent = 'フォロー解除';
          }
        });
        
        button.addEventListener('mouseleave', () => {
          if (text.getAttribute('data-following') === 'true') {
            text.textContent = 'フォロー中';
          }
        });
      });
    });
  </script>

  <!-- 投稿一覧 -->
  <div class="mt-8">
    <h2 class="text-lg font-medium text-gray-900 dark:text-white mb-4">投稿一覧</h2>
    <% if (microposts && microposts.length > 0) { %>
      <div class="space-y-4">
        <% microposts.forEach(post => { %>
          <div class="bg-white dark:bg-gray-900 shadow overflow-hidden sm:rounded-lg">
            <div class="px-4 py-5 sm:p-6">
              <div class="text-sm text-gray-900 dark:text-white">
                <%= post.title %>
              </div>
              <% if (post.imageUrl) { %>
                <div class="mt-2">
                  <img src="<%= post.imageUrl %>" alt="Post image" class="max-h-48 rounded-lg">
                </div>
              <% } %>
              <div class="mt-2 text-xs text-gray-500 dark:text-gray-400">
                <%= new Date(post.createdAt).toLocaleString('ja-JP') %>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <p class="text-gray-500 dark:text-gray-400">まだ投稿がありません。</p>
    <% } %>
  </div>
</div> 