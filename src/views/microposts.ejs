<%- contentFor('body') %>
<div class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold text-gray-900 mb-8">投稿一覧</h1>

    <div class="bg-bg rounded-lg shadow-sm p-6 mb-8">
        <h3 class="text-xl font-semibold text-gray-900 mb-4">投稿フォーム</h3>
        <form action="/microposts" method="POST" enctype="multipart/form-data" class="space-y-4">
            <div>
                <input type="text" 
                       name="title" 
                       placeholder="投稿内容を入力" 
                       required
                       class="w-full px-4 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
            </div>
            <div class="space-y-2">
                <input type="file" 
                       name="image" 
                       accept="image/*" 
                       onchange="previewImage(this)"
                       class="block w-full text-sm text-text
                              file:mr-4 file:py-2 file:px-4
                              file:rounded-md file:border-0
                              file:text-sm file:font-semibold
                              file:bg-primary file:text-white
                              hover:file:bg-blue-600
                              file:cursor-pointer">
                <img id="preview" class="hidden max-w-xs rounded-lg border border-border">
            </div>
            <button type="submit" 
                    class="bg-primary text-white px-6 py-2 rounded-md hover:bg-blue-600 transition-colors">
                投稿
            </button>
        </form>
    </div>

    <h3 class="text-xl font-semibold text-gray-900 mb-4">投稿一覧</h3>
    <div class="space-y-4">
        <% microposts.forEach(post => { %>
            <div class="bg-bg rounded-lg shadow-sm p-6">
                <div class="text-lg text-gray-900 mb-2"><%= post.title %></div>
                <% if (post.imageUrl) { %>
                    <div class="bg-white p-4 rounded-lg border border-border">
                        <img src="<%= post.imageUrl %>" 
                             alt="投稿画像" 
                             class="max-w-full h-auto rounded-lg mx-auto"
                             loading="lazy">
                    </div>
                <% } %>
                <div class="text-sm text-text mt-4">
                    <%= new Date(post.createdAt).toLocaleString('ja-JP') %>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<script>
    function previewImage(input) {
        const preview = document.getElementById('preview');
        if (input.files?.[0]) {
            const reader = new FileReader();
            reader.onload = e => {
                preview.classList.remove('hidden');
                preview.src = e.target.result;
            };
            reader.readAsDataURL(input.files[0]);
        } else {
            preview.classList.add('hidden');
            preview.src = '';
        }
    }
</script> 