<%- include('../../../layouts/public') %>

<div class="container mt-4">
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0">いいねしたユーザー</h5>
      <small class="text-muted"><%= likedUsers.length %>人</small>
    </div>
    
    <div class="list-group list-group-flush">
      <% if (likedUsers.length === 0) { %>
        <div class="list-group-item text-center text-muted py-4">
          まだいいねしたユーザーがいません
        </div>
      <% } else { %>
        <% likedUsers.forEach(like => { %>
          <a href="/<%= like.user.name %>" class="list-group-item list-group-item-action">
            <div class="d-flex align-items-center">
              <img 
                src="/uploads/<%= like.user.profile?.avatarPath || 'default_avatar.png' %>" 
                alt="<%= like.user.name %>" 
                class="rounded-circle me-3"
                style="width: 48px; height: 48px; object-fit: cover;"
              >
              <div>
                <h6 class="mb-0"><%= like.user.name %></h6>
                <% if (like.user.profile?.bio) { %>
                  <small class="text-muted"><%= like.user.profile.bio %></small>
                <% } %>
              </div>
            </div>
          </a>
        <% }); %>
      <% } %>
    </div>
  </div>
</div>

<style>
.list-group-item-action:hover {
  background-color: rgba(0, 0, 0, 0.02);
}
</style> 