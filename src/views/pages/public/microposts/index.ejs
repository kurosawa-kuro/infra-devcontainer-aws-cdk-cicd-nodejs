<%- contentFor('body') %>
<div class="max-w-7xl mx-auto px-4">
  <div class="flex gap-8">
    <!-- Main content -->
    <div class="flex-1">
      <div class="mb-12">
        <h1 class="text-3xl font-semibold mb-3 text-gray-900 dark:text-white">マイクロポスト一覧</h1>
        <p class="text-base text-gray-600 dark:text-gray-400">最新の投稿をチェックする</p>
      </div>

      <!-- マイクロポスト一覧 -->
      <div class="space-y-4">
        <% microposts.forEach(function(post) { %>
          <div class="bg-white dark:bg-gray-900 rounded-xl shadow-sm border border-gray-200 dark:border-gray-800 hover:border-rose-500 dark:hover:border-rose-500 transition-colors">
            <div class="p-6">
              <div class="flex items-start space-x-4">
                <div class="flex-1 min-w-0">
                  <h2 class="text-xl font-semibold mb-2 text-gray-900 dark:text-white"><%= post.title %></h2>
                  <p class="text-gray-600 dark:text-gray-400 mb-4"><%= post.content %></p>
                  <div class="flex items-center justify-between">
                    <span class="text-sm text-gray-500 dark:text-gray-400">
                      <%= new Date(post.createdAt).toLocaleString('ja-JP') %>
                    </span>
                    <a href="/microposts/<%= post.id %>" 
                       class="inline-flex items-center px-4 py-2 text-sm text-gray-600 dark:text-gray-400 hover:text-rose-600 dark:hover:text-rose-400 hover:bg-gray-50 dark:hover:bg-gray-800 rounded-lg transition-colors">
                      詳細を見る →
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </div>
</div>

<%- contentFor('scripts') %>
<script src="/js/microposts/index.js"></script> 