<%- contentFor('body') %>
<div class="max-w-7xl mx-auto px-4">
    <div class="flex gap-8">
        <!-- Main content -->
        <div class="flex-1">
            <div class="mb-12">
                <h1 class="text-3xl font-semibold mb-3 text-gray-900 dark:text-white">投稿詳細</h1>
            </div>

            <div class="bg-white dark:bg-gray-900 rounded-xl shadow-sm border border-gray-200 dark:border-gray-800">
                <div class="p-6">
                    <div class="space-y-4">
                        <!-- User info -->
                        <div class="flex items-center space-x-4">
                            <img src="<%= micropost.user.profile?.avatarPath || '/uploads/default_avatar.png' %>" 
                                 alt="User avatar" 
                                 class="w-12 h-12 rounded-full">
                            <div>
                                <a href="/<%= micropost.user.name || micropost.user.id %>" 
                                   class="text-gray-900 dark:text-white font-medium hover:text-rose-600 dark:hover:text-rose-400">
                                    <%= micropost.user.name || micropost.user.email %>
                                </a>
                                <% if (micropost.user?.userRoles?.some(ur => ur.role.name === 'admin')) { %>
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-rose-100 text-rose-800 dark:bg-rose-900 dark:text-rose-200 ml-2">
                                        管理者
                                    </span>
                                <% } %>
                            </div>
                        </div>

                        <!-- Post content -->
                        <div class="space-y-4">
                            <p class="text-gray-900 dark:text-white text-lg">
                                <%= micropost.title %>
                            </p>
                            <% if (micropost.imageUrl) { %>
                                <div>
                                    <img src="<%= micropost.imageUrl %>" 
                                         alt="投稿画像" 
                                         class="rounded-lg max-h-[32rem] w-auto">
                                </div>
                            <% } %>
                        </div>

                        <!-- Categories -->
                        <% if (micropost.categories && micropost.categories.length > 0) { %>
                            <div class="flex flex-wrap gap-2">
                                <% micropost.categories.forEach(relation => { %>
                                    <a href="/categories/<%= relation.category.id %>"
                                       class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200 hover:bg-blue-200 dark:hover:bg-blue-800 transition-colors">
                                        <%= relation.category.name %>
                                    </a>
                                <% }) %>
                            </div>
                        <% } %>

                        <!-- Metadata -->
                        <div class="flex items-center justify-between pt-4 border-t border-gray-200 dark:border-gray-700">
                            <div class="flex items-center space-x-4">
                                <p class="text-sm text-gray-500 dark:text-gray-400">
                                    <%= new Date(micropost.createdAt).toLocaleString('ja-JP') %>
                                </p>
                                <% if (micropost._count) { %>
                                    <p class="text-sm text-gray-500 dark:text-gray-400">
                                        <%= micropost._count.views %> 回表示
                                    </p>
                                <% } %>
                            </div>
                            <div class="flex items-center space-x-4">
                                <%- include('../../../components/micropost/like-button', {
                                    micropost,
                                    user,
                                    isLiked,
                                    likeCount
                                }) %>
                                <button class="flex items-center text-gray-500 dark:text-gray-400 hover:text-rose-600 dark:hover:text-rose-400">
                                    <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                                    </svg>
                                    <span class="text-sm">コメント</span>
                                </button>
                                <% if (locals.user && (locals.user.id === micropost.userId || locals.user.userRoles?.some(ur => ur.role.name === 'admin'))) { %>
                                    <form action="/microposts/<%= micropost.id %>" method="POST" class="inline">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button type="submit" class="flex items-center text-gray-500 dark:text-gray-400 hover:text-rose-600 dark:hover:text-rose-400">
                                            <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                            </svg>
                                            <span class="text-sm">削除</span>
                                        </button>
                                    </form>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Comment section -->
            <div class="mt-8">
                <h2 class="text-2xl font-semibold mb-6 text-gray-900 dark:text-white">コメント</h2>
                
                <% if (locals.user) { %>
                    <!-- Comment form -->
                    <div class="bg-white dark:bg-gray-900 rounded-xl shadow-sm border border-gray-200 dark:border-gray-800 mb-8">
                        <div class="p-6">
                            <form action="/microposts/<%= micropost.id %>/comments" method="POST">
                                <div class="mb-4">
                                    <label for="content" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                        コメントを投稿
                                    </label>
                                    <textarea
                                        id="content"
                                        name="content"
                                        rows="3"
                                        class="block w-full rounded-lg border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-white shadow-sm focus:border-rose-500 focus:ring-rose-500"
                                        placeholder="コメントを入力してください"
                                        required
                                    ></textarea>
                                </div>
                                <div class="flex justify-end">
                                    <button
                                        type="submit"
                                        class="inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-rose-600 hover:bg-rose-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-rose-500"
                                    >
                                        コメントを投稿
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                <% } else { %>
                    <div class="bg-white dark:bg-gray-900 rounded-xl shadow-sm border border-gray-200 dark:border-gray-800 mb-8 p-6">
                        <p class="text-gray-600 dark:text-gray-400">
                            コメントを投稿するには<a href="/auth/login" class="text-rose-600 dark:text-rose-400 hover:underline">ログイン</a>してください。
                        </p>
                    </div>
                <% } %>

                <!-- Comments list -->
                <div class="space-y-6">
                    <% if (comments && comments.length > 0) { %>
                        <% comments.forEach(comment => { %>
                            <div class="bg-white dark:bg-gray-900 rounded-xl shadow-sm border border-gray-200 dark:border-gray-800">
                                <div class="p-6">
                                    <div class="flex items-start space-x-4">
                                        <img src="<%= comment.user.profile?.avatarPath || '/uploads/default_avatar.png' %>" 
                                             alt="User avatar" 
                                             class="w-10 h-10 rounded-full">
                                        <div class="flex-1 min-w-0">
                                            <div class="flex items-center space-x-2">
                                                <a href="/<%= comment.user.name || comment.user.id %>" 
                                                   class="text-gray-900 dark:text-white font-medium hover:text-rose-600 dark:hover:text-rose-400">
                                                    <%= comment.user.name || comment.user.email %>
                                                </a>
                                                <% if (comment.user?.userRoles?.some(ur => ur.role.name === 'admin')) { %>
                                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-rose-100 text-rose-800 dark:bg-rose-900 dark:text-rose-200">
                                                        管理者
                                                    </span>
                                                <% } %>
                                                <span class="text-sm text-gray-500 dark:text-gray-400">
                                                    <%= new Date(comment.createdAt).toLocaleString('ja-JP') %>
                                                </span>
                                            </div>
                                            <p class="mt-2 text-gray-700 dark:text-gray-300">
                                                <%= comment.content %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p class="text-gray-600 dark:text-gray-400 text-center py-8">
                            まだコメントはありません。
                        </p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div> 