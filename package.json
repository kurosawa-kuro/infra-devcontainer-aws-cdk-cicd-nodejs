{
  "name": "node-api-project",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.js",
  "scripts": {
    "dev": "nodemon src/app.js",
    "test": "NODE_ENV=test jest --runInBand --forceExit --detectOpenHandles",
    "start": "node src/app.js",
    "staging": "pm2 start ecosystem.config.js --env staging",
    "prod:test": "NODE_ENV=production node -r dotenv/config src/app.js dotenv_config_path=.env",
    "prod": "pm2 start ecosystem.config.js --env production",
    "pm2:status": "pm2 status",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:logs": "pm2 logs",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:generate": "prisma generate",
    "db:deploy": "prisma migrate deploy",
    "docker:start": "npm run db:deploy && npm start",
    "batch:s3-log": "node src/batch/s3-log-uploader.js",
    "batch:s3-log:now": "node src/batch/s3-log-uploader.js --now"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.717.0",
    "@prisma/client": "^6.0.1",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "express-winston": "^4.2.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.0",
    "node-cron": "^3.0.3",
    "pm2": "^5.3.1",
    "winston": "^3.12.0",
    "winston-cloudwatch": "^6.3.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prisma": "^6.0.1",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "./src/tests/setup.js"
    ],
    "testTimeout": 10000
  }
}
